<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contextClickable="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:id="@+id/mortgage_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="贷款类型:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/mortgage_type_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/mortgage_type_tv"
                android:orientation="horizontal"
                android:paddingBottom="1dp">

                <RadioButton
                    android:id="@+id/mortgage_type_business_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="商业"/>

                <RadioButton
                    android:id="@+id/mortgage_type_housing_fund_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公积金"/>

                <RadioButton
                    android:id="@+id/mortgage_type_combine_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组合"/>
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#5bf27f"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:id="@+id/calculate_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="计算方式:"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/calculate_type_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/calculate_type_tv"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp">

                    <RadioButton
                        android:id="@+id/calculate_type_unit_price_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="通过单价"/>

                    <RadioButton
                        android:id="@+id/calculate_type_sum_mortgage_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通过贷款总额"/>
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/calculate_type_unit_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价："/>

                    <EditText
                        android:id="@+id/calculate_unit_price_et"
                        android:inputType="numberDecimal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/平米"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积："/>

                    <EditText
                        android:id="@+id/calculate_area_et"
                        android:layout_width="100dp"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平米"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp">

                    <TextView
                        android:id="@+id/calculate_unit_price_payment_ratio_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="首付比例："/>

                    <Spinner
                        android:id="@+id/calculate_unit_price_payment_ratio_spinner"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/calculate_unit_price_payment_ratio_tv">
                    </Spinner>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/calculate_type_sum_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款总额："/>

            <EditText
                android:id="@+id/calculate_sum_price_et"
                android:layout_width="100dp"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万元"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#5bf27f"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/mortgage_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="按揭年数："/>

            <Spinner
                android:id="@+id/mortgage_year_spinner"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mortgage_year_tv">
            </Spinner>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#5bf27f"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/mortgage_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="贷款利率："/>

            <Spinner
                android:id="@+id/mortgage_rate_spinner"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mortgage_rate_tv">
            </Spinner>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#5bf27f"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/repayment_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="还款方式:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/repayment_type_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/repayment_type_tv"
                android:orientation="horizontal"
                android:paddingBottom="1dp">

                <RadioButton
                    android:id="@+id/repayment_type_corpus_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="等额本息"/>

                <RadioButton
                    android:id="@+id/repayment_type_interest_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等额本金"/>
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/calculate_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始计算"
                android:background="#5bf27f"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/fill_again_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="重新填写"
                android:background="#5bf27f"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#5bf27f"/>

        <LinearLayout
            android:id="@+id/result_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="计算结果："
                android:layout_marginTop="10dp"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="房款总额："/>
                <EditText
                    android:id="@+id/result_sum_price_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="贷款总额："/>
                <EditText
                    android:id="@+id/result_sum_loan_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="还款总额："/>
                <EditText
                    android:id="@+id/result_repayment_sum_price_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="支付利息："/>
                <EditText
                    android:id="@+id/result_sum_interest_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="首期付款："/>
                <EditText
                    android:id="@+id/result_fisrt_payment_price_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="贷款月数："/>
                <EditText
                    android:id="@+id/result_sum_month_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="每月还款："/>
                <EditText
                    android:id="@+id/result_every_month_payment_edit"
                    android:layout_width="100dp"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:text="*以上结果仅供参考"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
